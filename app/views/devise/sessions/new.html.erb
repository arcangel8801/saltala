  <div class="row justify-content-center align-items-center h-100">
    <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-4">
      <div class="page-wrapper">
          <div class="container">
                <div class="login-form">
                  <div class="login-logo" style="max-width: 100%">
                    <%= image_tag 'logo.png' %>
                  </div>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, placeholder: "Escriba su Correo", class: 'form-control' %>
                    </div>

                    <div class="form-group">
                      <%= f.password_field :password, placeholder: "Escriba su ContraseÃ±a", class: 'form-control' %>
                    </div>

                    <div class="actions">
                      <%= f.submit "Entrar", class: 'btn btn-info btn-lg btn-block' %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
